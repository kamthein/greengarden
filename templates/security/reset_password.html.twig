{% extends 'base.html.twig' %}

{% block title %}Modification mot de passe !{% endblock %}
 {% block MessageFlash %}{% endblock %}

{% block body %}

    <div class="wrapper">
        <div class="container-fluid text-center">
            <div class="row">
                <div class="col-sm-12">
            {# FLASH #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div style="background:#e8f5e9; border-left:3px solid var(--vertColor); padding:0.6rem 0.9rem; border-radius:0 8px 8px 0; font-size:0.85rem; margin-bottom:1rem; color:#333;">
                        {{ message | raw }}
                    </div>
                {% endfor %}
            {% endfor %}
            
                    <form method="post" action="{{ path('app_reset_password', {'token':token}) }}">
                        <h1 class="h3 mb-3 font-weight-normal"> Modifier votre mot de passe </h1>
                        <br/>
                        <div class="form-group">

                            <input type="password" name="newPassword" id="newPassword"
                                   placeholder="Nouveau mot de passe" class="form-control">

                        </div>

                        <div class="form-group">
                            <input type="password" name="confirmationPassword" id="confirmationPassword"
                                   placeholder="Confirmation du mot de passe" class="form-control">
                        </div>

                        <input type="hidden" name="token" value="{{ token }}">
                        <br>
                        <button class="mdl-button-rond mdl-button--raised mdl-button--bleufonce mdl-button--colored" type="submit" title="Enregister">
                            Enregister
                        </button>
                    </form>

                </div>
            </div>
        </div>

    </div>



{% endblock %}
