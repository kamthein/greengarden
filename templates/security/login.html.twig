{% extends 'base.html.twig' %}
{% block title %}Se connecter{% endblock %}
{% block body %}

<div class="wrapper">
    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-sm-12">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="col-sm-12">
                            <div class="alert  alert-{{ label }} alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                                    &times;
                                </button>

                                <span class="msg_login">{{ message | raw }}</span>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
                <form method="post" action="{{ path('app_login') }}">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal"><strong>Connectez-vous</strong></h1>
                    <hr style="width: 100%; background: none repeat scroll 0 0 #EAEAEA; height: 1px;" />
                    <p><small>Use credentials <b>camille@example.com / admin </b> to test the platform</small></p>
                    <div class="form-group">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" autofocus>
                    </div>


                    <div class="form-group">
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe">
                    </div>

                    <div class="form-group">
                        <label>
                            <input type="checkbox" name="_remember_me" class="form-control"> Se souvenir de moi
                        </label>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
                    <br/>
                    <button class="mdl-button-rond mdl-button--raised mdl-button--bleufonce mdl-button--colored" type="submit">
                        Se connecter
                    </button><br/><br/>
                    {#<a href="{{ path('reset_password') }}"> Mot de passe oublié ? </a>#}
                    <hr style="width: 100%; background: none repeat scroll 0 0 #EAEAEA; height: 1px;" />
                   {#<span><a class="mdl-button add_item mdl-button--raised mdl-button--vert mdl-button--colored" href="{{ path('app_register') }}"> Créer un compte </a></span> #}
                </form>

            </div>
        </div>
    </div>

</div>

{% endblock %}
