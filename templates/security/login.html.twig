{% extends 'base.html.twig' %}
{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="wrapper" style="margin-top:2rem;">

    <div class="gg-details" style="max-width:420px; margin:0 auto;">
        <div class="gg-details-content" style="padding:2rem 1.5rem;">

            {# LOGO + TITRE #}
            <div style="text-align:center; margin-bottom:1.5rem;">
                <div style="font-size:2.5rem; margin-bottom:0.5rem;">ðŸŒ±</div>
                <h1 style="font-size:1.3rem; font-weight:800; color:var(--vertColor); margin-bottom:0.25rem;">
                    Connectez-vous
                </h1>
                <p style="font-size:0.78rem; color:#aaa;">
                    Bienvenue sur Le Prepousse
                </p>
            </div>

            {# MESSAGES FLASH #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div style="background:#e8f5e9; border-left:3px solid var(--vertColor); padding:0.6rem 0.9rem; border-radius:0 8px 8px 0; font-size:0.85rem; margin-bottom:1rem; color:#333;">
                        {{ message | raw }}
                    </div>
                {% endfor %}
            {% endfor %}

            {# ERREUR #}
            {% if error %}
                <div style="background:#fce4ec; border-left:3px solid var(--roseDarkColor); padding:0.6rem 0.9rem; border-radius:0 8px 8px 0; font-size:0.85rem; margin-bottom:1rem; color:#333;">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {# FORM #}
            <form method="post" action="{{ path('app_login') }}">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="gg-form-group">
                    <div>
                        <label class="gg-form-label" for="inputEmail">Adresse email</label>
                        <input type="email"
                               value="{{ last_username }}"
                               name="email"
                               id="inputEmail"
                               class="gg-form-input"
                               placeholder="exemple@email.com"
                               autofocus>
                    </div>
                    <div>
                        <label class="gg-form-label" for="inputPassword">Mot de passe</label>
                        <input type="password"
                               name="password"
                               id="inputPassword"
                               class="gg-form-input"
                               placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢">
                    </div>
                    <div style="display:flex; align-items:center; gap:0.5rem; font-size:0.82rem; color:#666;">
                        <input type="checkbox" name="_remember_me" id="remember"
                               style="width:16px; height:16px; accent-color:var(--vertColor); cursor:pointer;">
                        <label for="remember" style="cursor:pointer;">Se souvenir de moi</label>
                    </div>
                </div>

                <button type="submit" class="gg-action-btn btn-plant gg-submit-btn"
                        style="width:100%; justify-content:center; border:none; cursor:pointer; font-size:1rem; font-family:inherit; margin-top:1rem;">
                    <span class="btn-icon">ðŸ”‘</span>
                    <span class="btn-label">Se connecter</span>
                </button>

                <div style="display:flex; justify-content:space-between; margin-top:1rem; font-size:0.82rem;">
                    <a href="{{ path('app_register') }}" 
                    style="color:var(--vertColor); text-decoration:none; font-weight:600;">
                        ðŸŒ¿ CrÃ©er un compte
                    </a>
                    <a href="{{ path('forgotten_password') }}" 
                    style="color:#aaa; text-decoration:none;">
                        Mot de passe oubliÃ© ?
                    </a>
                </div>

                <p style="text-align:center; font-size:0.72rem; color:#bbb; margin-top:1rem;">
                    Pour tester sans crÃ©er de compte : <strong>camille@example.com</strong> / <strong>admin</strong>
                </p>
            </form>

        </div>
    </div>

</div>
{% endblock %}
