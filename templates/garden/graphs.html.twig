<details class="gg-details">
    <div class="gg-details-content">
        <a class="printresult" style="float:right; margin-bottom:0.5rem;">
            <img src="{{ asset('images/print.png') }}" alt="Imprimer" width="24" height="24">
        </a>

        <div class="gg-section-title" style="text-align:left; padding-top:0;">Quantités récoltées par mois</div>
        {% if r_byuser is not empty %}
            {% set r_tot = 0 %}
            {% for consor in r_byuser %}{% set r_tot = r_tot + consor.recolte %}{% endfor %}
            <p style="font-size:0.82rem; color:#888; margin-bottom:0.75rem;">
                Total : <strong>{{ r_tot|number_format(1, '.', ' ') }} kg</strong>
            </p>
            {{ render_chart(chart, {'class': 'my-chart'}) }}
        {% else %}
            <p class="gg-empty">Aucune récolte pour le moment.</p>
        {% endif %}

        <hr class="gg-divider"/>

        <div class="gg-section-title" style="text-align:left;">Quantités récoltées par méthode</div>
        {% if r_byuser is not empty %}
            {{ render_chart(chart_don_r, {'class': 'my-chart'}) }}
        {% else %}
            <p class="gg-empty">Aucune récolte pour le moment.</p>
        {% endif %}
    </div>
    <summary>
        <span class="summary-left">
            <span class="summary-icon"><img src="{{ asset('images/jardin_ja.png') }}" alt="Graphiques" width="22" height="22"></span>
            <span>Graphiques</span>
        </span>
        <span class="summary-chevron">›</span>
    </summary>
</details>
