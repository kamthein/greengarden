<details class="gg-details">
    <div class="gg-details-content">
        {% if fluxPaniers is not empty %}
            <div style="text-align:center; margin-bottom:0.75rem;">
                <img src="{{ asset('photo/recoltes.png') }}" alt="R√©coltes" style="max-height:200px; border-radius:10px; object-fit:cover; width:100%;">
            </div>
        {% endif %}

        {% set nbr = 0 %}
        {% for fluxpanier in fluxPaniers %}
            {% if fluxpanier.recoltes is not empty %}
                <table class="gg-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th class="th-rose">üåø Esp√®ce</th>
                            <th>Qt√©</th>
                            <th>M√©thode</th>
                            <th>
                                {% if app.user == fluxpanier.flux.user %}
                                    <a href="{{ path('ajouter_recolte', {id: fluxpanier.id}) }}">
                                        <img src="{{ asset('images/ajouter.png') }}" alt="Ajouter" width="20">
                                    </a>
                                {% endif %}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for recolte in fluxpanier.recoltes %}
                            {% set nbr = nbr + recolte.quantity %}
                            <tr>
                                <td><small>{{ recolte.createdAt|date("d/m/y") }}</small></td>
                                <td>
                                    <img src="{{ asset('images/icon/' ~ recolte.consommable.iconlien) }}" alt="Icon" width="18" height="18">
                                    &nbsp;{{ recolte.consommable.nom }}
                                </td>
                                <td>{{ recolte.quantity }}<small><i>kg</i></small></td>
                                <td><small><i>{{ recolte.methode.nom }}</i></small></td>
                                <td>
                                    {% if recolte.user == user and app.user == recolte.user %}
                                        <a href="{{ path('supp_recolte', {id: recolte.id}) }}">
                                            <img src="{{ asset('images/supp_def.jpg') }}" alt="Supprimer" width="18">
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <hr class="gg-divider"/>
            {% endif %}
        {% endfor %}

        {% if nbr == 0 %}
            <p class="gg-empty">Aucune r√©colte enregistr√©e.</p>
        {% endif %}
    </div>
    <summary>
        <span class="summary-left">
            <span class="summary-icon"><img src="{{ asset('images/panier_ja.png') }}" alt="R√©coltes" width="22" height="22"></span>
            <span>R√©coltes ({{ nbr }}<small><i>kg</i></small>)</span>
        </span>
        <span class="summary-chevron">‚Ä∫</span>
    </summary>
</details>
