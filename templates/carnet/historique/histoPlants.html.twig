<details class="gg-details">
    <div class="gg-details-content">
        {% if fluxPaniers is not empty %}
            <div style="text-align:center; margin-bottom:0.75rem;">
                <img src="{{ asset('photo/plantation.png') }}" alt="Plantation" style="max-height:200px; border-radius:10px; object-fit:cover; width:100%;">
            </div>
        {% endif %}

        {% set nbr = 0 %}
        {% for fluxpanier in fluxPaniers %}
            {% if fluxpanier.plants is not empty %}
                <table class="gg-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th class="th-vert">üå± Esp√®ce</th>
                            <th>Qt√©</th>
                            <th>√âtat</th>
                            <th>
                                {% if app.user == fluxpanier.flux.user %}
                                    <a href="{{ path('ajouter_plant', {id: fluxpanier.id}) }}">
                                        <img src="{{ asset('images/ajouter.png') }}" alt="Ajouter" width="20">
                                    </a>
                                {% endif %}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for pl in fluxpanier.plants %}
                            {% set nbr = nbr + pl.quantite %}
                            <tr>
                                <td><small>{{ pl.createdAt|date("d/m/y") }}</small></td>
                                <td>
                                    <img src="{{ asset('images/icon/' ~ pl.consommable.iconlien) }}" alt="Icon" width="18" height="18">
                                    &nbsp;{{ pl.consommable.description }}
                                </td>
                                <td>{{ pl.quantite }}</td>
                                <td><small><i>{{ pl.state.nom }}</i></small></td>
                                <td>
                                    {% if pl.user == user and app.user == pl.user %}
                                        <a href="{{ path('supp_plant', {id: pl.id}) }}">
                                            <img src="{{ asset('images/supp_def.jpg') }}" alt="Supprimer" width="18">
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <hr class="gg-divider"/>
            {% endif %}
        {% endfor %}

        {% if nbr == 0 %}
            <p class="gg-empty">Aucune plantation enregistr√©e.</p>
        {% endif %}
    </div>
    <summary>
        <span class="summary-left">
            <span class="summary-icon"><img src="{{ asset('images/semis_ja.png') }}" alt="Plantations" width="22" height="22"></span>
            <span>Plantations ({{ nbr }})</span>
        </span>
        <span class="summary-chevron">‚Ä∫</span>
    </summary>
</details>
